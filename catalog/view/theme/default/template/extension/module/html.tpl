<!-- calculator -->
<div class="container">
  <div class="calculator">
    <div class="calculator-title"><span>Dota 2</span> mmr boost</div>
    <form>
      <div class="row">

        <div class="offset-lg-4 col-lg-2 col-md-6 col-sm-6 col-6">
          <label class="calculator-subtitle">My rank</label>
          <input type="number" id="from-rank" value="2000" min="0" max="7500" step="25" required="">
        </div>

        <div class="col-lg-2  col-md-6 col-sm-6 col-6">
          <label class="calculator-subtitle">I want to be</label>
          <input type="number" id="to-rank"  value="3500"  min="0" max="7500" step="25" required="">
        </div>

        <div class="offset-lg-2 col-lg-8">
          <input type="text" id="calculator-slider" name="my_range" value="" />
        </div>

        <div class="col-lg-12">
          <a href="#" class="button">Add to cart</a>
        </div>

      </div>
    </form>
  </div>
</div>

